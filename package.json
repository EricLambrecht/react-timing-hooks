{
  "name": "react-timing-hooks",
  "version": "0.2.1",
  "description": "React hooks for setTimeout, setInterval, requestAnimationFrame, requestIdleCallback",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest src",
    "test:integration": "rimraf \"./tmp\" && npm run build && jest integration-tests",
    "commit": "git-cz",
    "prettier:check": "prettier --list-different \"{src,integration-tests}/**/*.{ts,tsx}\"",
    "prettier:write": "prettier --write \"{src,integration-tests}/**/*.{ts,tsx}\"",
    "build": "tsc",
    "build:watch": "npm run build -- --watch",
    "build:prod": "rimraf \"./dist\" && npm run build -- --outDir \"./dist\"",
    "release": "cli-confirm \"Do you really want to create a new release? (Y/N)\" && standard-version",
    "prepublishOnly": "cli-confirm \"Do you really want to publish the current release? (Y/N)\" && npm run test && npm run test:integration && npm run build:prod"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/EricLambrecht/react-timing-hooks.git"
  },
  "keywords": [
    "react",
    "hooks",
    "timeout",
    "interval",
    "timing",
    "effects",
    "requestAnimationFrame",
    "requestIdleCallback"
  ],
  "author": "Eric Lambrecht",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EricLambrecht/react-timing-hooks/issues"
  },
  "homepage": "https://github.com/EricLambrecht/react-timing-hooks#readme",
  "devDependencies": {
    "@shopify/jest-dom-mocks": "^2.8.10",
    "@testing-library/react": "^9.5.0",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.30",
    "@types/react": "^16.9.25",
    "@types/react-dom": "^16.9.5",
    "cli-confirm": "^1.0.1",
    "commitizen": "^4.0.3",
    "emoji-cz": "^0.3.1",
    "jest": "^24.9.0",
    "node-fetch": "^2.6.0",
    "prettier": "1.18.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "replace": "^1.1.5",
    "rimraf": "^3.0.2",
    "standard-version": "^7.1.0",
    "ts-jest": "^24.3.0",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": "^16.8.6"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/emoji-cz"
    }
  },
  "standard-version": {
    "scripts": {
      "prerelease": "npm run build:prod",
      "postchangelog": "replace  \"üêõ \" \"\" CHANGELOG.md&&replace \"‚ú® \" \"\" CHANGELOG.md"
    }
  }
}
